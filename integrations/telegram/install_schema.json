{
  "name": "Telegram",
  "description": "Send notifications to Telegram chats via Bot API",
  "type": "notification",
  "fields": [
    {
      "name": "bot_token",
      "label": "Bot Token",
      "type": "password",
      "required": true,
      "env_var": "TELEGRAM_BOT_TOKEN",
      "help": "Get from @BotFather on Telegram (format: 123456789:ABCdefGHI...)",
      "pre_prompt": [
        "1. Open Telegram and search for @BotFather",
        "2. Send /newbot and follow the instructions",
        "3. Copy the bot token (e.g., 123456789:ABCdefGHIjklMNO)"
      ]
    },
    {
      "name": "chat_id",
      "label": "Chat ID",
      "type": "string",
      "required": true,
      "env_var": "TELEGRAM_CHAT_ID",
      "help": "Your Telegram chat ID (numeric)",
      "pre_prompt": [
        "To get your Chat ID:",
        "1. Send any message to your bot on Telegram",
        "2. Open this URL in browser (replace BOT_TOKEN with your token):",
        "   https://api.telegram.org/botBOT_TOKEN/getUpdates",
        "3. Find \"chat\":{\"id\":123456789} - that number is your Chat ID"
      ],
      "dynamic_help_url": "https://api.telegram.org/bot{bot_token}/getUpdates"
    },
    {
      "name": "parse_mode",
      "label": "Parse Mode",
      "type": "select",
      "required": false,
      "default": "HTML",
      "options": ["HTML", "Markdown", "MarkdownV2"],
      "help": "Message format style"
    }
  ],
  "post_install": [
    "Test with: rg notify send \"Hello from RedGit!\"",
    "Check status: rg notify status"
  ],
  "links": {
    "botfather": "https://t.me/BotFather",
    "api_docs": "https://core.telegram.org/bots/api"
  }
}